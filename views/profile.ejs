<!doctype html>
<html>
<head>
    <title>My friend list </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>

    </style>
</head>
<body>

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="/profile">My Friend List</a>
        </div>
        <ul class="nav navbar-nav">
            <li class="active"><a href="/profile">Users</a></li>
            <li><a href="/friends">Friends</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li><a href="/logout"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
        </ul>
    </div>
</nav>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Welcome <%= user.name %> </h1>
    </div>

    <div class="row">
        <% for(var i=0; i<users.length; i++) { %>
        <div class="col-sm-6 col-md-6 col-lg-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> <%=users[i].name%> </h3>
                <p>
                    <strong>email</strong>: <%=users[i].email%><br>
                </p>
                <form action="/friends" method="post">
                    <input type="hidden" name="friendId" value="<%=users[i]._id%>">
                    <button type="submit" class="btn btn-default">Add Friend</button>
                </form>
            </div>
        </div>
          <%}%>
    </div>

</div>
</body>
</html>
